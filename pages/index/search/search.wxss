/* pages/index/search/search.wxss */

.wrap {
  padding: 20rpx 0 22rpx;
}

.area-left {
  background: #F6F7F9;
  height: 80rpx;
  background: #F6F7F9;
  border-radius: 32rpx;
  -webkit-border-radius: 32rpx;
  -moz-border-radius: 32rpx;
  -ms-border-radius: 32rpx;
  -o-border-radius: 32rpx;
  padding-left: 32rpx;
  padding-right: 22rpx;
}
.area-left-search {
  width: 26rpx;
  margin-right: 10rpx;
}
.area-left-input {
  font-size: 26rpx;
  flex: 1;
  padding-left: 20rpx;
}


.business-title {
  margin: 30rpx auto 0;
}
.type-title-active {
  color: #FFB957;
}
.business-btn {
  text-align: center;
  width: 216rpx;
  height: 40rpx;
  line-height: 36rpx;
  color: #AAAAAA;
  background: #E6E6E6;
  border: 1px solid #E6E6E6;
  border-radius: 12rpx;
  -webkit-border-radius: 12rpx;
  -moz-border-radius: 12rpx;
  -ms-border-radius: 12rpx;
  -o-border-radius: 12rpx;
}
.businessBtnActive {
  color: #151414;
  background: #F9F8CD;
  border: 1px solid #151414;
}