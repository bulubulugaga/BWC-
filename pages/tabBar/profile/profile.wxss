/* pages/tabBar/profile/profile.wxss */
.header {
  position: fixed;
  width: 100vw;
  top: 0;
  left: 0;
  z-index: 10;
}
.header-bg {
  width: 100%;
  height: 100%;
  z-index: 1;
}
.header-user {
  z-index: 2;
  bottom: 44rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  -moz-transform: translateX(-50%);
  -ms-transform: translateX(-50%);
  -o-transform: translateX(-50%);
  width: 486rpx;
  height: 234rpx;
  box-shadow: 0rpx 6rpx 8rpx 0rpx rgba(220, 184, 172, 0.6);
  padding: 30rpx;
}
.header-user-aver {
  width: 90rpx;
  height: 90rpx;
}
.header-user-name {
  margin: 8rpx 0 10rpx;
}
.header-user-vip, .header-login {
  /* width: 146rpx; */
  height: 36rpx;
  background: linear-gradient(90deg, #F2E8DC 0%, #ECD7A8 100%);
  margin: 0 auto;
  border-radius: 8rpx;
  padding-right: 20rpx;
  -webkit-border-radius: 8rpx;
  -moz-border-radius: 8rpx;
  -ms-border-radius: 8rpx;
  -o-border-radius: 8rpx;
}
.header-user-vip-img {
  width: 24rpx;
  height: 20rpx;
  margin: 0 4rpx 0 14rpx;
}

/* 钱包 */
.profile-wallet {
  height: 80rpx;
  background: #F9F8CD;
  border-radius: 12rpx;
  -webkit-border-radius: 12rpx;
  -moz-border-radius: 12rpx;
  -ms-border-radius: 12rpx;
  -o-border-radius: 12rpx;
  margin: 28rpx auto;
  padding: 0 26rpx;
}
.profile-wallet-img {
  width: 34rpx;
  height: 42rpx;
}

/* 商家中心 */
.shop-center {
  height: 200rpx;
}
.shop-center-bg {
  width: 100%;
  height: 200rpx;
}
.shop-center-text {
  top: 50%;
  left: 62rpx;
  transform: translateY(-58%);
  -webkit-transform: translateY(-58%);
  -moz-transform: translateY(-58%);
  -ms-transform: translateY(-58%);
  -o-transform: translateY(-58%);
}

.choice-box-item-img {
  width: 42rpx;
  margin-right: 20rpx;
}