/* pages/tabBar/components/indexHeader.wxss */
.header {
  background: #F9F8CD;
  padding-bottom: 14rpx;
  position: fixed;
  z-index: 1000000;
}
.header-left {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #000000;
  border-radius: 32rpx;
  -webkit-border-radius: 32rpx;
  -moz-border-radius: 32rpx;
  -ms-border-radius: 32rpx;
  -o-border-radius: 32rpx;
  background: white;
  padding-left: 22rpx;
  padding-right: 22rpx;
  margin-top: 46rpx;
}
.header-left-area {
  margin-right: 10rpx;
  max-width: 140rpx;
}
.header-left-line {
  width: 2rpx;
  height: 32rpx;
  background: #D7D7D7;
  margin: 0 16rpx;
}
.header-left-search {
  width: 26rpx;
  margin-right: 10rpx;
}
.header-left-input {
  font-size: 26rpx;
  flex: 1;
}
.header-right-arrow {
  width: 34rpx;
  z-index: 1;
  margin-left: 10rpx;
  z-index: 1000000;
}
.header-right-txt {
  margin-top: -21rpx;
  padding: 6rpx;
  border: 1rpx solid #000;
  margin-left: 22rpx;
  z-index: 1000001;
}
.header-blank {
  height: calc(156rpx - 8px + 26rpx) ;
}

/* 导航菜单 */
.index_nav {
  margin: 50rpx auto;
}
.index_nav .box image {
  width: 80rpx;
  height: 72rpx;
}

/* 公告 */
.adver {
  font-size: 24rpx;
  height: 50rpx;
}

/* 优选好店/热门店铺 */
.hot {
  padding: 24rpx;
  margin-top: 34rpx;
}
.hot-content-box {
  width: 200rpx;
  margin-right: 20rpx;
}
.hot-content-box:nth-child(3n+3) {
  margin-right: 0;
}
.hot-content-box-img {
  width: 100%;
  height: 148rpx;
}
.hot-content-box-name {
  margin: 6rpx 0 4rpx;
}


/* 商家 */
.business-title {
  margin: 30rpx 0 24rpx;
}
.business-btn {
  text-align: center;
  width: 216rpx;
  height: 40rpx;
  line-height: 36rpx;
  color: #AAAAAA;
  background: #E6E6E6;
  border: 1px solid #E6E6E6;
  border-radius: 12rpx;
  -webkit-border-radius: 12rpx;
  -moz-border-radius: 12rpx;
  -ms-border-radius: 12rpx;
  -o-border-radius: 12rpx;
}
.businessBtnActive {
  color: #151414;
  background: #F9F8CD;
  border: 1px solid #151414;
}
