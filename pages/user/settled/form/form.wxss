/* pages/user/settled/form/form.wxss */

/* 表单 */
.settled-label {
  color: #000 !important;
}
.settled-platform {
  padding: 10px 16px 64rpx;
}
.settled-platform-circle {
  width: 30rpx;
  height: 30rpx;
  border: 1px solid #878787;
}
.settled-platform-c-img {
  width: 30rpx;
  height: 30rpx;
}
.settled-platform-img {
  width: 60rpx;
  margin-left: 18rpx;
}
.settled-platform-type {
  margin-top: 50rpx;
}
.shop-code-photo {
  width: 96rpx;
  height: 96rpx;
  margin: 30rpx 30rpx 0 60rpx;
  border: 2rpx dashed #AAAAAA;
}
.settled-platform-btn {
  width: 330rpx;
  height: 60rpx;
  line-height: 56rpx;
  margin-top: 50rpx;
  border-radius: 16rpx;
  -webkit-border-radius: 16rpx;
  -moz-border-radius: 16rpx;
  -ms-border-radius: 16rpx;
  -o-border-radius: 16rpx;
}

/* logo */
.shop-logo {
  padding: 30rpx 24rpx 114rpx;
  margin-top: 48rpx;
}
.shop-logo-photo {
  margin-top: 30rpx;
  width: 134rpx;
  height: 134rpx;
  border: 2rpx dashed #AAAAAA;
}

/* 按钮 */
.settled-btn {
  margin: 50rpx auto 30rpx;
}


/* 弹窗 */
.popup-title {
  height: 50rpx;
}
.popup-time-24 {
  line-height: 60rpx;
  padding-left: 122rpx;
}
.popup-time-wrap {
  width: 100%;
  height: 440rpx;
}
.scroll-time {
  width: 48%;
}
.popup-time-line {
  width: 4%;
}
.popup-time-box {
  line-height: 50rpx;
}
.popup-time-red {
  color: #FFB957;
}
.popup-time-btn {
  width: 80%;
  height: 80rpx;
  margin: 20rpx auto 0;
}

.popup-city-wrap {
  height: 500rpx;
}
.right-line {
  border-right: 1rpx solid #ccc;
} 