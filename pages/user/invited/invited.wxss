/* pages/user/invited/invited.wxss */
page {
  background: #E83C3C;
}
/* 背景图 */
.in-bg {
  z-index: -1;
}

/* 公共样式 */
.in-item-title {
  left: 135rpx;
}
.in-item-title-bg {
  width: 420rpx;
  height: 86rpx;
  left: 0;
  z-index: 1;
}
.in-item-title-txt {
  width: 420rpx;
  font-size: 42rpx;
  line-height: 75rpx;
  z-index: 2;
}
.in-item-content {
  top: 36rpx;
  border-radius: 20rpx;
  -webkit-border-radius: 20rpx;
  -moz-border-radius: 20rpx;
  -ms-border-radius: 20rpx;
  -o-border-radius: 20rpx;
  box-shadow: 8px 8px 18px 0px rgba(205, 26, 24, 0.59);
}

/* 二维码 */
.in-item-code {
  margin-top: 566rpx;
}
.in-item-code-content {
  padding-top: 104rpx;
}
.in-item-code-img {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 48rpx;
}
.in-item-code-line image {
  width: 464rpx;
}
.in-item-code-txt {
  color: #EC4A3F;
  padding: 10rpx 66rpx 40rpx;
}

/* 按钮 */
.in-btn {
  height: 110rpx;
  top: 64rpx;
}
.in-btn-bg {
  z-index: 1;
  width: 704rpx;
  height: 138rpx;
}
.in-btn-txt {
  z-index: 2;
  color: #E83B3C;
  font-size: 34rpx;
  line-height: 110rpx;
  background: none;
}

/* 人数 */
.in-item-per {
  margin-top: 114rpx;
  color: #E83B3C;
}
.in-item-per-content {
  padding: 114rpx 82rpx 70rpx 64rpx;
}

/* 规则 */
.in-item-rule {
  margin-top: 114rpx;
  padding-bottom: 100rpx;
}
.in-item-rule-content {
  line-height: 58rpx;
  padding: 118rpx 64rpx;
}