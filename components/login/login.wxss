/* components/login/login.wxss */
.login {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(12, 8, 8, 0.4);
  z-index: 9999999;
}
.login-content {
  position: fixed;
  width: 500rpx;
  height: 400rpx;
  top: 50%;
  left: 50%;
  border-radius: 16rpx;
  background: white;
  text-align: center;
  padding-top: 40rpx;
  transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
  -ms-transform: translate(-50%,-50%);
  -o-transform: translate(-50%,-50%);
  -webkit-border-radius: 16rpx;
  -moz-border-radius: 16rpx;
  -ms-border-radius: 16rpx;
  -o-border-radius: 16rpx;
}
.login-content-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
}
.login-content-name {
  font-size: 30rpx;
  margin-top: 20rpx;
}
.login-content-btn {
  margin-top: 68rpx;
  width: 80%;
  margin-left: 10%;
  background: #F9F8CD;
  border: 1rpx solid #100F0F;
  font-size: 28rpx;
  line-height: 60rpx;
  border-radius: 32rpx;
  -webkit-border-radius: 32rpx;
  -moz-border-radius: 32rpx;
  -ms-border-radius: 32rpx;
  -o-border-radius: 32rpx;
}